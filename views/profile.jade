    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  body(onload='fetchData()')
    .container
      .header.clearfix 
        form#myform
          .form-group
            label Site Name
            input.form-control#siteName(type='text', placeholder='Website name')
          .form-group
            label Site URL
            input.form-control#siteURL(type='text', placeholder='Website URL')
          .form-group
            label Site Password
            input.form-control#sitePassword(type='password', placeholder='Website URL')
          button.btn.btn-primary(type='submit') Submit

